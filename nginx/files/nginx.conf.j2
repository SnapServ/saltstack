# Managed by SaltStack
user {{ vars.service_user }};
worker_processes {{ vars.worker_processes }};
pid {{ vars.pidfile_path }};

{%- for _include in vars.global_config_includes %}
  include {{ _include }};
{%- endfor %}

events {
  worker_connections {{ vars.worker_connections }};
}

http {
  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;
  keepalive_timeout 65;
  types_hash_max_size 2048;

  server_tokens off;
  access_log {{ vars.global_access_log_path }};
  error_log {{ vars.global_error_log_path }};

  include /etc/nginx/mime.types;
  default_type application/octet-stream;

{%- for _include in vars.http_config_includes %}
  include {{ _include }};
{%- endfor %}
  include {{ vars.vhosts_dir }}/*.conf;
}
